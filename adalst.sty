% just put it pretty printed
% 
\newcommand{\listada}[1]{
\selectlanguage{english}
\begin{verbatimcmd}
\small
\input{#1}
\end{verbatimcmd}
\selectlanguage{spanish}
}

% same as \listada but with rules delimiting the listing
%
\newcommand{\rlistada}[1]{
\selectlanguage{english}
\begin{verbatimcmd}
\hrule
\vspace{0.25cm}
\small
\input{#1}
\hrule
\end{verbatimcmd}
\selectlanguage{spanish}
}

